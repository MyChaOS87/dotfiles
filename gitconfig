[include]
    path = ~/.gitconfig.local

[core]
    pager = less -iXFR
    autocrlf = input
    safecrlf = warn

[color]
    ui = auto

[color "branch"]
    current = green
    local = blue
    remote = yellow

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = simple

[pull]
    rebase = preserve

[url "git+ssh://git@bitbucket.org"]
	insteadOf = https://bitbucket.org
[diff]
	renames = copies
	mnemonicprefix = true
